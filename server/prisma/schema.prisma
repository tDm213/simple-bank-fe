generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       Int      @id @default(autoincrement())
  username String   @unique
  password String
  balance  Float    @default(0.0)
  sent     Transaction[] @relation("SentTransactions")
  received Transaction[] @relation("ReceivedTransactions")
}

model Transaction {
  id         Int      @id @default(autoincrement())
  fromUser   User?    @relation("SentTransactions", fields: [fromUserId], references: [id])
  fromUserId Int?
  toUser     User?    @relation("ReceivedTransactions", fields: [toUserId], references: [id])
  toUserId   Int?
  amount     Float
  timestamp  DateTime @default(now())
  status     String   // 'pending', 'completed', 'rejected'
  type       String   // 'send', 'request'
}